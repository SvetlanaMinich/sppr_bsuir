@{
    var itemsCount = 5;
}

<h1>@ViewData["Title"]</h1>
<h2>Список</h2>
<ol type="A">
@for (int i = 1; i <= itemsCount; i++)
    {
        <li>Элемент @i списка</li>
    }
</ol>
<h2>Форма</h2>
<form id="index" method="post">
    <div class="col-sm-10 offset-2">
        <select name="list-items" id="list-items-id"
                asp-items=ViewBag.ListItems>
        </select>
        <br><br>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="checkbox1" name="checkbox1">
            <label class="form-check-label" for="checkbox1">Чек-бокс 1</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="checkbox2" name="checkbox2">
            <label class="form-check-label" for="checkbox2">Чек-бокс 2</label>
        </div>
        <br>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="rad1" name="radiobtns" value="1">
            <label class="form-check-label" for="rad1">Радио-1</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="rad2" name="radiobtns" value="2">
            <label class="form-check-label" for="rad2">Радио-2</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="rad3" name="radiobtns" value="3">
            <label class="form-check-label" for="rad3">Радио-3</label>
        </div>
        <br><br>
    </div>

    <div class="row mb-3">
        <label for="login" class="col-sm-2 col-form-label">Логин:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="login" placeholder="Введите имя" name="login">
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-2 col-form-label">Пароль:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" placeholder="Введите пароль" name="password">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Отправить</button>
    <br><br>
</form>
