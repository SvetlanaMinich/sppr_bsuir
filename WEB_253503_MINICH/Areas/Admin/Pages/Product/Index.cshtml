@page
@model WEB_253503_MINICH.UI.Areas.Admin.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" style="width:110px" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cup.Data!.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cup.Data!.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cup.Data!.Items[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cup.Data!.Items[0].ImgPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cup.Data!.Items)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <img src="@(Html.DisplayFor(modelItem => item.ImgPath))" style="max-height: 200px"/>
            </td>
            <td>
                    <a class="btn btn-primary" style="margin-bottom: 15px; width:110px" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" style="margin-bottom: 15px; width:110px" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-primary" style="margin-bottom: 15px; width:110px" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



